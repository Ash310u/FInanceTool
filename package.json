{
  "name": "financial-reporting-tool",
  "version": "1.0.0",
  "description": "Offline Financial Reporting Desktop Application",
  "main": "electron/main.js",
  "author": "Financial Reporting Tool",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && concurrently \"npm run backend\" \"wait-on http://localhost:5000 && electron .\"",
    "backend": "cd backend && python app.py",
    "electron:dev": "set NODE_ENV=development && wait-on http://localhost:5000 && electron .",
    "build:backend": "node scripts/build-backend.js",
    "build:electron": "electron-builder --win",
    "build:win": "npm run build:backend && npm run build:electron",
    "build:all": "npm run build:backend && electron-builder --win --mac --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.financial.reporting",
    "productName": "Financial Reporting Tool",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Financial Reporting Tool"
    },
    "files": [
      "electron/**/*",
      "frontend/**/*",
      "package.json",
      "!backend/**/*",
      "!venv/**/*",
      "!node_modules/**/*",
      "!*.log",
      "!*.sh",
      "!.git/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist/financial-backend.exe",
        "to": "backend/financial-backend.exe",
        "filter": ["**/*"]
      }
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {}
}

