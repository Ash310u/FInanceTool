{
  "name": "financial-reporting-tool",
  "version": "1.0.0",
  "description": "Offline Financial Reporting Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run backend\" \"npm run electron:dev\"",
    "backend": "cd backend && python app.py",
    "electron:dev": "wait-on http://localhost:5000 && electron . --dev",
    "build:backend": "cd backend && pyinstaller --onefile --noconsole --name financial-backend --add-data \"../frontend:frontend\" app.py",
    "build:electron": "electron-builder --win",
    "build:win": "npm run build:backend && npm run build:electron"
  },
  "build": {
    "appId": "com.financial.reporting",
    "productName": "Financial Reporting Tool",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "electron/**/*",
      "frontend/**/*",
      "backend/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/dist/financial-backend.exe",
        "to": "backend/financial-backend.exe"
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {}
}

